<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create New Poll</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="card card-body">
            <h4>Create a New Poll</h4>

            <form action="/create" method="POST">
              <div class="form-group">
                <label for="title">Enter Title</label>
                <input
                  type="text"
                  name="title"
                  id="title"
                  class="form-control"
                />
              </div>

              <div class="form-group">
                <label for="description">Enter Descreption</label>
                <textarea
                  name="description"
                  id="description"
                  class="form-control"
                ></textarea>
              </div>

              <div id="options">
                <p>Enter Your Poll</p>
                <div class="form-group">
                  <input
                    type="text"
                    name="option1"
                    class="form-control"
                    placeholder="Option 1"
                  />
                </div>
                <br />
                <div class="form-group">
                  <input
                    type="text"
                    name="option2"
                    class="form-control"
                    placeholder="Option 2"
                  />
                </div>
              </div>
              <br>
              <button class="btn btn-info btn-sm" id="addOption">
                Add More Option
              </button>
              <br />
              <br />
              <input
                type="submit"
                value="Create New Poll"
                class="btn btn-success form-control"
              />
            </form>
          </div>
        </div>
      </div>
    </div>
    <script>
      let options = document.getElementById("options");
      let addOptions = document.getElementById("addOption");
      let currentOptionNumber = 3;

      addOptions.addEventListener("click", (e) => {
        e.preventDefault();
        let option = createNewOption();
        options.appendChild(option);
      });

      let createNewOption = () => {
        let div = document.createElement("div");
        div.className = "form-group";
        let input = document.createElement("input");
        input.type = "text";
        input.name = 'option ' + currentOptionNumber;
        input.placeholder = 'Option ' + currentOptionNumber++
        input.className = "form-control mb-3 mt-3"
        div.appendChild(input);
        return div;
    };


    </script>
  </body>
</html>
